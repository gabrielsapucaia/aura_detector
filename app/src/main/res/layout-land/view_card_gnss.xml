<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="12dp">
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="GNSS / POSITIONING" android:textSize="16sp" android:textStyle="bold" android:paddingBottom="8dp"/>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:baselineAligned="false">
            <LinearLayout android:layout_width="0dp" android:layout_weight="0.65" android:layout_height="wrap_content" android:orientation="vertical" android:paddingEnd="8dp">
                <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="RAW DATA" android:textStyle="bold" android:textSize="13sp" android:paddingBottom="4dp"/>
                <TextView android:id="@+id/gnss_rawData" android:layout_width="match_parent" android:layout_height="wrap_content" android:fontFamily="monospace" android:textSize="10sp" android:text="Loading..."/>
                <Button android:id="@+id/gnss_btnViewRawMeasurements" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Ver Medições" android:layout_marginTop="4dp" android:visibility="gone"/>
            </LinearLayout>
            <LinearLayout android:layout_width="0dp" android:layout_weight="0.35" android:layout_height="wrap_content" android:orientation="vertical" android:paddingStart="8dp">
                <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="INTERPRETATION" android:textStyle="bold" android:textSize="13sp" android:paddingBottom="4dp"/>
                <TextView android:id="@+id/gnss_posQualityText" android:layout_width="match_parent" android:layout_height="wrap_content" android:textSize="11sp" android:text="Position quality: --"/>
                <TextView android:id="@+id/gnss_signalEnvText" android:layout_width="match_parent" android:layout_height="wrap_content" android:textSize="11sp" android:text="Signal env: --"/>
                <TextView android:id="@+id/gnss_motionStateText" android:layout_width="match_parent" android:layout_height="wrap_content" android:textSize="11sp" android:text="Motion state: --"/>
                <TextView android:id="@+id/gnss_healthText" android:layout_width="match_parent" android:layout_height="wrap_content" android:textSize="11sp" android:text="GNSS health: --"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
